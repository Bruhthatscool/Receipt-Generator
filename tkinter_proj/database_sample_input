CREATE TABLE receipt_table (    receipt_id INT PRIMARY KEY AUTO_INCREMENT,    donar_id INT,    amount DECIMAL(10, 2) NOT NULL,    date DATE NOT NULL,    category VARCHAR(50),    
                            payment_type VARCHAR(50),    reference_no VARCHAR(100),    FOREIGN KEY (donar_id) REFERENCES donar_details(donar_id));

