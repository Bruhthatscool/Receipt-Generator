CREATE TABLE category (    category_id INT PRIMARY KEY AUTO_INCREMENT,    category_name VARCHAR(50) NOT NULL UNIQUE,    active INT DEFAULT 1);

INSERT INTO category (category_name, active) VALUES
    -> ('Education', 1),
    -> ('Health', 1),
    -> ('Food', 1),
    -> ('Shelter', 1),
    -> ('Medical Supplies', 0),
    -> ('Disaster Relief', 0),
    -> ('General Fund', 1);

CREATE TABLE donar_details (    donar_id INT PRIMARY KEY AUTO_INCREMENT,    name VARCHAR(100) NOT NULL,    phone_no VARCHAR(20),    email VARCHAR(100),    address TEXT,    location VARCHAR(50));

